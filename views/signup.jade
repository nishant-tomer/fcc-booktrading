doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title BOOKFARE| Register
    link(href='css/bootstrap.min.css', rel='stylesheet')
    link(href='font-awesome/css/font-awesome.css', rel='stylesheet')
    link(href='css/plugins/iCheck/custom.css', rel='stylesheet')
    link(href='css/animate.css', rel='stylesheet')
    link(href='css/style.css', rel='stylesheet')
  body.gray-bg
    .middle-box.text-center.loginscreen.animated.fadeInDown
      div
        div
          h1.logo-name.fa.fa-book 
        h3 Register to 
          a.btn.btn-default(href="/") BOOKFARE
        p Create account to see it in action.
        form.m-t(role='form', action='login.html')
          .form-group
            input.form-control(type='text',name='username', placeholder='username', required='true')
            small Only Alphanumeric, max 40 characters
          .form-group
            input.form-control(type='text',name='city', placeholder='city', required='true')
            small Only Alphabetes, max 40 characters
          .form-group
            input.form-control(type='text',name='state', placeholder='State', required='true')
            small Only Alphabetes, max 40 characters
          .form-group
            input.form-control(type='password', name='password', placeholder='Password', required='true')
            small Only Alphanumeric, min 6 and max 15 characters
          .form-group
            input.form-control(type='password', name='confirmpassword', placeholder='Confirm Password', required='true')
          button.btn.btn-primary.block.full-width.m-b(type='submit') Register
          p.text-muted.text-center
            small Already have an account?
          a.btn.btn-sm.btn-white.btn-block(href='/login') Login
        p.m-t
          small Nishant Tomer @  FreeCodeCamp
    // Mainly scripts
    script(src='js/jquery-2.1.1.js')
    script(src='js/bootstrap.min.js')
